<h1>管理画面のユーザーの方一覧だよ！</h1>

  <table class = "task_table" >
    <tr>
      <th> ユーザーID</th>
        <th>ユーザー名</th>
        <th>タスク数</th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.tasks.count%></td>
      <td><%= link_to 'タスクの詳細', admin_user_path(user.id), class: 'btn btn-default' %></td>
      <td><%= link_to "編集", edit_admin_user_path(user.id), class: 'btn btn-default' %></td>
      <td><%= link_to '削除', admin_user_path(user.id), method: :delete , class: 'btn btn-default', data: { confirm: '本当に削除していいですか？' }%></td>
    </tr>
  <% end %>
  </table>

<%= link_to 'ユーザーを作成', new_admin_user_path, class: 'btn btn-info'  %>
